<section class="login-wrapper">
    {{> login-hero}}
    <section class="login-form">
        <form id="registration-form" class="form-card">
            <h3>Register</h3>
            <label for="username" class="form-label">Username</label>
            <input id="username" class="form-text-input" type="text">

            <label for="email" class="form-label">Email</label>
            <input id="email" type="text" class="form-text-input">

            <label for="password" class="form-label">Password</label>
            <input id="password" type="password" class="form-text-input">

            <button id="register-submit" type="submit" class="form-submit-button green-button">Register</button>
        </form>
    </section>
</section>
<section class="form-wrapper">
    <h2>New Post!</h2>
    <form class="form-card">
        
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" id="post-title" class="form-text-input">

        <label for="post-content" class="form-label">Content</label>
        <textarea name="post-content" id="post-content" rows="10" class="form-text-input-large"></textarea>

        <button type="submit" id="submit" class="button green-button">Submit</button>
    </form>

</section>
<script src="/js/new-post.js"></script>